<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".OutPut_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:elevation="2dp"

            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            >



            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back_2"
                android:layout_gravity="center"
                android:onClick="onClickBack"
                android:layout_marginStart="20dp"
                app:tint="#403E3E" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Results"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="50dp"
                android:gravity="center"
                android:textSize="25dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#403E3E"
                />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/zendots"
                android:gravity="center"
                android:text="Electricity Cost"
                android:textColor="#FBFBFB"
                android:textSize="23dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:background="@drawable/roundedstroke"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/balo_bold"
                        android:text="Cost Per Hour"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtCostPerHour"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/balo_bold"
                        android:text="Cost Per Day"
                        android:textColor="@color/white"

                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtCostPerDay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/balo_bold"
                        android:text="Cost Per Month"
                        android:textColor="@color/white"

                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtCostPerMonth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="end"

                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/balo_bold"
                        android:text="Cost Per Year"
                        android:textColor="@color/white"

                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtCostPerYear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/balo_bold"
                        android:text="kwH Per Day"
                        android:textColor="@color/white"

                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtKwhPerDay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="-30dp"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:onClick="onClickBack"
            android:visibility="gone"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            android:background="@drawable/roundedbutton"
            >



            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                app:tint="#403E3E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Go Back"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="50dp"
                android:gravity="center"
                android:textSize="20dp"
                android:fontFamily="@font/zendots"
                android:textColor="#403E3E"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/Admob_Banner">
        </com.google.android.gms.ads.AdView>


    </LinearLayout>


</ScrollView>